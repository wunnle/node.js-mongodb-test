{
  "version": 2,
  "builds": [
    {
      "src": "routes/**/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/routes"
    },
    {
      "src": "/addUser/(.*)",
      "dest": "/routes/addUser/index.js?name=$1"
    },
    {
      "src": "/getUser/(.*)",
      "dest": "/routes/getUser/index.js?name=$1"
    },
    {
      "src": "/allUsers",
      "dest": "/routes/allUsers"
    }
  ],
  "env": {
    "DASECRET": "@dasecret",
    "MONGO_DB_URL": "@mongo_db_url"
  }
}